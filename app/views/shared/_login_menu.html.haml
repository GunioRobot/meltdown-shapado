- count = 0
%ul.sf-menu
  %li
    %a
      Sign In
    %ul
      - entries = multiauth_providers.keys
      -first_section = entries[0, 5]
      -last_section = entries[5, entries.size]

      -first_section.each do |provider|
        -config = multiauth_providers[provider]
        %li
          =link_to(provider, "/users/auth/#{config["openid"] ? "open_id?openid_url=#{config["openid"]}" : "#{provider.underscore}"}", :class => "#{provider} #{config["class"]}", :id => "btn_#{count+=1}" )
      %li
        %a
          more...
        %ul
          -last_section.each do |provider|
            -config = multiauth_providers[provider]
            %li
              =link_to(provider, "/users/auth/#{config["openid"] ? "open_id?openid_url=#{config["openid"]}" : "#{provider.underscore}"}", :class => "#{provider} #{config["class"]}", :id => "btn_#{count+=1}" )

