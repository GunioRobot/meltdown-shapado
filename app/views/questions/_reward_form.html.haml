-if @question.reward.nil? && logged_in? && current_user.can_create_reward?(@question)
  = form_tag start_reward_path(@question), :class => "add_reward" do
    reward:
    -rep = current_user.reputation_on(current_group)
    #reward_slider{:"data-max" => rep < 500 ? rep - 25 : 500}
    #reward_value
    = text_field_tag "reward[reputation]", "", :id => "reward_reputation"
    .buttons
      = link_to t('scaffold.cancel'), '', :class => 'cancel'
      = t("global.or")
      = submit_tag "create", :class => "save"

